<% include ../partials/header %>

<div class="container">
    <h1 style="text-align:center">Edit <%= campground.name %></h1>
    <div class="row" style="width:30%;margin:25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="camp[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-info btn-block" type="submit" value="Update!">
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back!</a>
    </div>
</div>

<% include ../partials/footer %>
